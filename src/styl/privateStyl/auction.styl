*
  -webkit-tap-highlight-color: rgba(0,0,0,0);
ol 
  margin 0
  -webkit-padding-start 0px
body
  position relative
  line-height 1.5
  background #9e5bc8
  font "Lucida Grande",Verdana,"Microsoft Yahei",STXihei,Sans-serif
.wrap
  .header
    position relative
    >img
      width 100%
    .host-wrap
      position absolute
      top 15px
      left 15%
      width 70%
      >img
        width 4rem
        height 4rem
        border-radius 50%
      .host-say
        flex-direction column
        -webkit-flex-direction column
        img
          width 100%
          width 200px
          height 33px
        span
          padding-top 0.1rem
          font-size 1.3rem
          margin-bottom 0.5rem
          color #666666
    .flex-container
      display flex
      display -webkit-flex
  .win
    text-align center
    .center-wrap
      width 70%
      margin-left 15%
      text-align left
      .button-like
        padding 1rem 0.8rem
        display inline-block
        height 3rem
        text-align center
        font-size 1.3rem
        vertical-align top
        border-radius 8px
        box-shadow 0px 2px 4px 0px rgba(158, 91, 200, 0.7)
        .text-br
          display block
          width 100%
          line-height 1.1
      #get
        background #ffda05
        min-width 65%
        line-height 2.9rem
        vertical-align middle
      #click
        background #ff6f05
        width 15%
        color #fff
        float right
        margin-left 5px
        font-style italic
    .result-wrap
      margin-top 10px
      position relative
      width 70%
      .line 
        display inline-block
        border 3px solid #b06dda
        width 100%
        height 10px
        background #833bb0
        opacity 0.7
        border-radius 8px
        box-sizing border-box
        padding 0 10px
      .result-board
        display inline-block
        position absolute
        z-index 200
        height 100px
        background #f9f0a0
        width 92%
        margin 0 4%
        margin-top -10px
        text-align center
        line-height 100px
        vertical-align middle
  .winner-wrap
    background #b06ed9
    margin 0 10px
    padding 0 2%
    margin-top 100px
    header
      text-align center
      padding .5rem 0
    img
      width 100%
    .winner-avatar-wrap
      width 100%
      margin-top 2rem
      img
        display inline-block
        width 11%
        height 11%
        border-radius 50%
  .reward-wine-wrap
    margin 1.5rem 10px
    img
      width 100%
    .reward-bottom
      .progress-wrap
        myflex()
        justify-content space-between
#mask
  background #000
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  
#test
  position fixed
  padding 1rem 0.5rem
  line-height 1.25
  top 33%
  left 15%
  overflow-y scroll
  background #fff
  width 70%
  height 30%
  border-radius 5px
  color #333
  li 
    margin-top 0.5rem
    font-size 1.1rem
  .li 
    font-size 1.1rem
  .tips-des
    font-size 1.4rem
  .title
    font-size 1.2rem
    margin-top 1rem
  .statement
    font-weight bolder
    font-size 1.2rem

#close
  border-radius 50%
  background red
  width 5rem
  height 5rem
  line-height 5rem
  vertical-align middle
  font-size 2rem
  display inline-block
  
.close-wrap
  width 70%
  position fixed
  left 15%
  text-align center
  bottom 10%
  background transparent
  z-index 5


.delete-rotate
  -webkit-transition -webkit-transform 1s ease-in-out 
  transition transform 1s ease-in-out

.effect
  opacity 0
  -webkit-transform rotate(380deg) 
  -webkit-transform-origin 0 480px 
  transform rotate(380deg)
  transform-origin 0 480px
  
  


      
      
      
        
        
        
      
      
    
    
      
    
      
        
        
        
        
