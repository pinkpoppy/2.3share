.wrap
  background #9e5bc8
  .header
    position relative
    >img
      width 100%
    .host-wrap
      position absolute
      top 15px
      left 15%
      width 70%
      >img
        width 4rem
        height 4rem
        border-radius 50%
      .host-say
        flex-direction column
        -webkit-flex-direction column
        img
          width 100%
          width 200px
          height 33px
        span
          padding-top 0.1rem
          font-size 1.3rem
          margin-bottom 0.5rem
          color #666666
    .flex-container
      display flex
      display -webkit-flex
  .win
    text-align center
    section
      width 70%
    .button-wrap
      text-align center
      .button
        border-radius 5px
        border none
        outline none
        height 3rem
        br 
          line-height 0
      #get
        background #ffda05
      #click
        background #ff6f05
    .result-wrap
      text-align center
      .line 
        display inline-block
        width 100%
        height 5px
        background #833bb0
        
        
      
      
    
    
      
    
      
        
        
        
        
